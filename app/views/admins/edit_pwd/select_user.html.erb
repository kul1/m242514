
<%
  if current_ma_user.role.upcase.split(',').include?("A")
    user = User.all.desc(:created_at)
  else
    user = User.where(user: current_ma_user).desc(:created_at)
  end
%>
<div class="field" data-role="fieldcontain">
  <%= label_tag :usertag, 'User code' %>
  <%= select_tag :usertag, options_from_collection_for_select(user, :id, :code), "data-native-menu"=>"false" %>
</div>
